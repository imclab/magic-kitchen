[
  <% @recipes.each do |r| %>
  {
    "id": <%= r.id %>, 
    "name" : <%= r.name.to_json.html_safe %>,
    "content": <%= r.content.to_json.html_safe %>,
    "ingredients": [
      <% r.ingredients.each do |i| %>
      {"name": "<%= i.name %>"}
      <% end %>
    ],
    "can_edit": <%= can? :edit, r %>,
    "is_liked": <%= current_user.likes.where() %>
    "author": {
      "id": <%= r.user.id %>,
      "name": "<%= r.user.name %>",
      "email": "<%= r.user.email %>",
      "age": "<% r.user.age %>",
      "is_follower": <%= current_user.following?(r.user) %>
    }
  },
  <% end %>
  {}
]