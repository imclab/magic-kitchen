%h2 Recipes
=form_tag recipes_path, :method => "get" do
  %p
  = label_tag "Search"
  = text_field_tag :search, params[:search]
	
  %p
  = label_tag "With"
  = text_field_tag :with, params[:with]
	
  %p
  = label_tag "Without"
  = text_field_tag :without, params[:without]
	
  %p
  = submit_tag "Search", :name => nil

#recipes
= render "recipes"
