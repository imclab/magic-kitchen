<div id="jointoday">
<%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
<ul>
	<li><%= f.label :name, "Type your name" %><%= f.text_field :name, :class => "fieldgroup" %></li>
	
  <li><%= f.label :email, "Type your email address" %><%= f.email_field :email, :class => "fieldgroup" %></li>

  <li><%= f.label :password, "Choose a password" %><%= f.password_field :password, :class => "fieldgroup" %></li>

  <li><%= f.label :password_confirmation, "Confirm your password" %><%= f.password_field :password_confirmation, :class => "fieldgroup" %></li>

  <li><%= f.submit "Create my profile", :class => "joinnow join_button"%></li>
</ul>
<% end %>
</div>
