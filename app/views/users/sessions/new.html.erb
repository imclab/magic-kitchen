
<div id="jointoday">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<ul>
	<li><%= f.label :email %><%= f.email_field :email, :class => "fieldgroup"%></li>

  <li><%= f.label :password %><%= f.password_field :password, :class => "fieldgroup" %></li>

  <li><%= f.check_box :remember_me, :class => "remember_box" %> <p>Remember me</p></li>

  <li><%= f.submit "Login", :class => "joinnow signin_button" %></li>
</ul>
<% end %>

</div>
